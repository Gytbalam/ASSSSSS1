<!-- header -->
<%- include ('../partials/header.ejs') %> 
<!-- Main body -->
<%- include ('../partials/nav.ejs') %> 

<!-- NAVBAR -->
<html>
<body>
   
      <!-- MAIN NAVIGATION -->
      <div class="wrapper_home"> 
        <h1>Welcome to the <%= title %> web page</h1>
        <a href="/book-list/add" class="btn btn-primary" role="button">
          <i class="fas fa-plus-circle"></i> Add a Book</a>
        <br>
        <br>
        <h2><i class="fa-brands fa-codepen">&nbsp; &nbsp; </i><%= title %></h2>
       <br>
         <h2>Books</h2>
        <br>  
        <p>BOOK PAGE</p>
        <main class="container">
          <div class="row">
              <div class="col-md-offset-3 col-md-6">
                  <br>
                  <table class="table table-bordered table-striped table-hover">
                  <tr>
                      <th class="text-center">Name </th>
                      <th class="text-center">Author </th>
                      <th class="text-center">Published </th>
                      <th class="text-center">Description </th>
                      <th class="text-center">Price </th>
                      <th class="text-center"></th>
                      <th class="text-center"></th>
                  </tr>
                      <!-- repeatable section -->
                      <% for(let count = 0; count < BookList.length; count++) { %>
                        <tr class="table table-bordered table-striped table-hover">
                            <td class="text-center"><%= BookList[count].name %></td>
                            <td class="text-center"><%= BookList[count].author %></td>
                            <td class="text-center"><%= BookList[count].published %></td>
                            <td class="text-center"><%= BookList[count].description %></td>
                            <td class="text-center"><%= BookList[count].price %></td>
                            <td class="text-center">
                              <a href="/book-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                              <i class="fas fa-pencil alt"></i>Edit</a>
                            </td>
                            <td class="text-center">
                            <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash alt"></i>Delete</a>
                          </td>
                          </tr>
                    <% } %>
                </table>
              </div>
          </div>
      </main>
          
          
        </div>
      </body>
      </html>

