<!-- Content for the add page -->
<html>
<body>
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-4">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                    <div class="form group">
                        <label for="nameTextField">Book Title</label>
                        <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter the Book title"
                        name="name" required>
                        </div>

                        <div class="form group">
                            <label for="authorTextField">Author</label>
                            <input type="text" class="form-control"
                            id="authorTextField"
                            placeholder="Enter the author"
                            name="author"required>
                            </div>

                        <div class="form group">
                             <label for="publishedTextField">Year</label>
                            <input type="text" class="form-control"
                            id="publishedTextField"
                            placeholder="Enter the Year of publication"
                            name="published" required>
                            </div>

                            <div class="form group">
                                <label for="descriptionTextField">Description</label>
                               <textarea type="text" class="form-control"
                               id="descriptionTextField"
                               placeholder="Enter a brief description"
                               name="description" required>
                            </textarea>
                               </div>
                               
                               <div class="form group">
                                <label for="priceTextField">Year</label>
                               <input type="text" class="form-control"
                               id="priceTextField"
                               placeholder="Enter the Books price"
                               name="price" required>
                               </div>
                                <br>
                                <br>
                                <button class="btn btn-primary" type="submit">
                                <i class="fas fa-edit"></i> Add </button>
                              
                                <a href="/book-list" class="btn btn-warning">
                                    <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
        </div>
    </div> 
</body>
</html>

